<script>
    // Wallpaper dynamic set
    $(document).ready(function () {
        let width = window.innerWidth;

        var pattern = Trianglify({
            width: (width === 0)? 2000: width,
            height: (document.height !== undefined) ? document.height : document.body.offsetHeight,
            cell_size: 100
        });

        let dataUrl = pattern.canvas().toDataURL();

        $(".bg-gradient").css("background-image", 'url(' + dataUrl + ')');
    })
</script>

