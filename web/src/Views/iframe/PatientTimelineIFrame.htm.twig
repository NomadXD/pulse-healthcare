<!DOCTYPE html>
<!--suppress HtmlUnknownTarget -->
<html lang="en">

{% import 'macro/control_panel/common.htm.twig' as control_panel %}
{% import 'macro/form_fields.htm.twig' as form_fields %}

{{ control_panel.iframe_start() }}

<div class="container pt-2">
    {% for prescription in prescriptions %}
        {{ control_panel.card_start(prescription['date'],  "ignore-triangle danger") }}
        {% for medication in prescription['medications'] %}
            {{ control_panel.card_start("Medication ID: " ~ medication['id']) }}
            <div class="d-flex justify-content-between">
                <h4>{{ medication['name'] }} </h4>
                <a href="https://www.google.com" target="_blank">
                    <div class="blue-text pb-2" style="display: inline;">
                        <h4><i class="fas fa-external-link-alt ml-2"></i></h4>
                    </div>
                </a>
            </div>
            <h5>{{ medication['dose'] }} | {{ medication['frequency'] }} |
                {{ medication['time'] }}.</h5>
            <hr/>
            <h6 class="text-center">
                {{ medication['comment'] == ''? 'No Comment' : medication['comment'] }}
            </h6>
            {{ control_panel.card_end() }}
        {% endfor %}
        <div class="mt-3 d-flex justify-content-between">
            <small class="text-muted">Doctor ID:<a href="{{ site }}/showprofile?user={{ prescription['doctor'] }}"
                                                   target="_blank"> {{ prescription['doctor'] }} </a></small>
            <small class="text-muted">Prescription ID: {{ prescription['id'] }} </small>
        </div>
        {{ control_panel.card_end() }}
        <hr class="m-4"/>
    {% endfor %}

    <h6 class="text-center">No more entries...</h6>
</div>

{{ control_panel.iframe_middle() }}

<script src="{{ site }}/js/register-patient.js"></script>
{% if (account_password != null) %}
    {% include 'modals/created_account.htm.twig' %}
{% endif %}

{{ control_panel.iframe_end() }}
</html>