<!DOCTYPE html>
<!--suppress HtmlUnknownTarget -->
<html lang="en">

{% import 'macro/form_fields.htm.twig' as form_fields %}

<head>
    {% include("part/header.htm.twig") %}
    {% include("part/nojs.htm.twig") %}
    <title>Doctor Registration</title>
</head>

<body>
<div class="bg-image"></div>

{% include("part/navbar.htm.twig") %}

<main class="mt-sm-5 py-5">
    <div class="container">
        <section class="wow fadeIn">
            <div class="row z-depth-3">

                <div class="border d-none d-lg-block col-lg-4 text-white text-center p-5 bg-gradient">
                    <h1 class="mb-5">
                        <strong>MediKit 0.0.1 alpha</strong>
                    </h1>
                    <h4 class="mb-5">
                        <strong>Best & free platform to mange all your medical needs</strong>
                    </h4>
                    <p class="mb-5">
                        Loved by over 500 doctors, 2000 patients & 100 medical centers.
                    </p>
                    <h3 class="mb-5">
                        <strong>Already has an account?</strong>
                    </h3>
                    <a class="btn btn-outline-white btn-lg" href="{{ site }}/login">
                        SIGN IN
                    </a>
                </div>

                <div class="border border-light col-lg-8 p-0 m-0">
                    <form action="{{ site }}/register/doctor" class="m-0 p-5 bg-white needs-validation" method="post"
                          novalidate>
                        <p class="text-center h4 mb-5">DOCTOR REGISTRATION</p>

                        {% if (error != null) %}
                            <div class="alert alert-danger text-center mb-3" role="alert">
                                {{ error }}
                            </div>
                        {% endif %}

                        {{ form_fields.input_with_label('full_name', 'Full Name', "Doctor's Full Name", '', 'text',
                            'Enter the full name of the doctor') }}
                        {{ form_fields.input_with_label('display_name', 'Name', 'Most Known Name', '', 'text',
                            'Enter the name which everyone calls the doctor') }}
                        {{ form_fields.input_with_label('category', 'Category', 'Specialized category', '', 'text',
                            'Eg: OPD, Rheumatologist etc.') }}

                        {{ form_fields.input_with_label('slmc_id', 'SLMC Reg ID', 'Doctor Registration ID in SLMC','', 'text') }}
                        {{ form_fields.input_with_label('email', 'Email', "Doctor's Email Address", '', 'email') }}
                        {{ form_fields.input_with_label('phone_number', 'Phone', 'Mobile Number', '', 'tel') }}
                        <hr>
                        {{ form_fields.input_with_label('nic', 'NIC', 'Doctor NIC', '', 'text',
                            'This will act as your username') }}

                        <div class="text-right">
                            <button class="btn btn-primary my-4" type="submit">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
        </section>

    </div>
</main>

{% include "part/footer.htm.twig" %}
{% include "part/scripts.htm.twig" %}
<script src="{{ site }}/js/register-doctor.js"></script>

</body>

</html>