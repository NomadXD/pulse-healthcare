{% import "macro/test.htm.twig" as Test %}

{% set NAME = 'Debug' %}

<!doctype html>
<html lang="en">
<head>
    {% include("part/header.htm.twig") %}
    {% include("part/nojs.htm.twig") %}
    <title>Tests</title>
</head>
<body>
{% include("part/navbar.htm.twig") %}

<main>
    <div class="container wow fadeIn">

        {{ Test.test_card_top('GET Request test:') }}
        <p>GET['name'] = <i>{{ name }}</i></p>
        {{ Test.test_card_bottom() }}

        {{ Test.test_card_top('Database test:') }}
        <table class="table">
            <thead class="thead">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Age</th>
            </tr>
            </thead>
            <tbody>
            {% for row in db %}
                <tr>
                    <td>{{ row['ID'] }}</td>
                    <td>{{ row['FirstName'] }}</td>
                    <td>{{ row['LastName'] }}</td>
                    <td>{{ row['Age'] }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ Test.test_card_bottom() }}

    </div>
</main>

{% include("part/footer.htm.twig") %}
{% include("part/scripts.htm.twig") %}
</body>
</html>
