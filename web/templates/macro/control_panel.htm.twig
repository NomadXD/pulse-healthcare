/*
-----------------------------------------------
Sidebar
-----------------------------------------------
*/

{% macro sidebar_start(site) -%}
<div class="sidebar-fixed position-fixed p-2 bg-dark">
    <div class="text-center">
        <a class="logo-wrapper waves-effect p-3" href='{{ site }}'>
            <h1 class="font-weight-bold mb-2 wow fadeIn white-text" data-wow-delay="0.3s">
                MediKit
            </h1>
        </a>
    </div>

    <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action waves-effect red-text" id="drawer-close">
            <strong><i class="fas fa-times mr-3"></i>Close Drawer</strong>
        </a>
        {%- endmacro %}
        {% macro sidebar_end() -%}
    </div>

</div>
{%- endmacro %}

/*
-----------------------------------------------
Buttons in sidebar
-----------------------------------------------
*/

{% macro sidebar_button(text, id, icon, active) -%}
    {% if (active) %}
        {% set additional_classes = "active rounded mb-0 z-depth-2" %}
    {% endif %}
    <button id="{{ id }}"
            class="list-group-item list-group-item-action waves-effect {{ additional_classes }} sidebar-button">
        <i class="fas {{ icon }} mr-3"></i>{{ text }}</button>
{%- endmacro %}

/*
-----------------------------------------------
Navbar
-----------------------------------------------
*/

{% macro navbar(text) -%}
    <nav class="navbar fixed-top primary-color">
        <div class="px-3 row">
            <div class="col-2">
                <i class="fas fa-bars white-text fa-2x p-2 waves-effect" id="drawer-open"></i>
            </div>
            <span class="col-10 fa-2x text-white text-left">{{ text }}</span>
        </div>
    </nav>
{%- endmacro %}

/*
-----------------------------------------------
IFrame
-----------------------------------------------
*/

{% macro iframe_start(page, icon) -%}
    <head>
        {% include("part/header.htm.twig") %}
        <style>
            body {
                background-image: none;
            }
        </style>
        <title>MediKit</title>
    </head>
<body class="bg-light">
<div id="loader" class="d-flex content-justify-center" style="opacity: 0.8;">
    <div class="spinner-grow text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>

</div>
<div class="bg-image"></div>
<main class="p-md-2">
    <div class="container-fluid py-2">
        <div id="title-card" class="card  indigo text-white">
            <div class="card-body d-sm-flex justify-content-between">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <i class="fas {{ icon }} mr-3"></i> {{ page }}
                </h4>
            </div>
        </div>
    </div>
    {%- endmacro %}

    {% macro iframe_middle() -%}
    <div class="d-md-block d-lg-none" style="height: 100px;">
    </div>
</main>
{% include "part/scripts.htm.twig" %}
{%- endmacro %}

{% macro iframe_end() -%}
</body>
{%- endmacro %}

/*
-----------------------------------------------
IFrameCards
-----------------------------------------------
*/

{% macro card_start(title) -%}
<div class="card my-2">
    <div class="card-header text-center bg-dark text-white">
        {{ title }}
    </div>
    <div class="card-body">
        {%- endmacro %}
        {% macro card_end() -%}
    </div>
</div>
{%- endmacro %}