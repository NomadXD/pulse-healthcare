<!--suppress HtmlUnknownTarget -->
<div id="loader" class="d-flex content-justify-center">
    <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

<header>
    <nav class="navbar fixed-top navbar-expand-lg bg-white scrolling-navbar">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand pr-3" href="{{ site }}">
                <strong>MediKit</strong>
            </a>

            <!-- Expander -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-content"
                    aria-controls="navbar-content" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Links -->

            <div class="collapse navbar-collapse" id="navbar-content">
                {% if (page == "Home") %}
                    <ul class="navbar-nav mr-auto" id="links">

                        {% set nav_links = [["#home", 'Home'], ['#services', 'Services'], ['#team', 'Our Team']] %}

                        {% for item in nav_links %}
                            {% set href = item[0] %}
                            {% set caption = item[1] %}
                            <li class="nav-item px-1">
                                <a href="{{ href }}" class="nav-link text-dark font-weight-bold">{{ caption }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}

                {% if (account_id == null) %}
                    <!-- Sign In Button -->
                    <ul class="navbar-nav ml-auto nav-flex-icons">
                        <li class="nav-item">
                            <a href="{{ site }}/login" class="nav-link btn btn-outline-dark waves-effect">
                                <i class="fas fa-user-circle"></i> &nbsp; Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ site }}/register/medi" class="nav-link btn btn-outline-dark waves-effect">
                                <i class="fas fa-hospital"></i> &nbsp; Register
                            </a>
                        </li>
                    </ul>
                {% else %}

                    {% if (account_type == 'admin') %}
                        {% set icon = 'user-cog' %}
                    {% elseif (account_type == 'doctor') %}
                        {% set icon = 'user-md' %}
                    {% elseif (account_type == 'patient') %}
                        {% set icon = 'user-tie' %}
                    {% elseif (account_type == 'med_center') %}
                        {% set icon = 'hospital' %}
                    {% else %}
                        {% set icon = 'user' %}
                    {% endif %}

                    <!-- Sign Out Button -->
                    <ul class="navbar-nav ml-auto nav-flex-icons">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="profileNav" data-toggle="dropdown"
                               aria-haspopup="true"
                               aria-expanded="false">
                                <i class="fas fa-{{ icon }} mr-2"></i> {{ account_id }} </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-default"
                                 aria-labelledby="profileNav">
                                <a onclick="post('{{ site }}/profile', null, 'get')" class="dropdown-item" href="#"><i
                                            class="fas fa-address-card mr-2" style="width: 20px;"></i>My Account</a>
                                <a onclick="post('{{ site }}/control/{{ account_type }}', null, 'get')"
                                   class="dropdown-item" href="#"><i
                                            class="fas fa-cogs mr-2" style="width: 20px;"></i>Control Panel</a>
                                <a onclick="post('{{ site }}/logout')" class="dropdown-item" href="#"><i
                                            class="fas fa-power-off mr-2" style="width: 20px;"></i>Sign Out</a>
                            </div>
                        </li>
                    </ul>
                {% endif %}


            </div>

        </div>
    </nav>

    <div style="height:50px;"></div>

</header>